/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/net/ti-dp83867.h>
#include "fsl-ls1012a.dtsi"

/ {
	model = "ACORN-V2 Board";
	compatible = "acorn", "fsl,ls1012a";

	aliases {
		ethernet0 = &pfe_mac0;
		ethernet1 = &eth1;
		ethernet2 = &eth2;
	};

	sys_mclk: clock-mclk {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <25000000>;
	};

	reg_1p8v: regulator-1p8v {
		compatible = "regulator-fixed";
		regulator-name = "1P8V";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
		regulator-always-on;
	};

	dipsw: dipsw {
		compatible = "nxr,dipsw";
		status = "ok";

		gpios = <&gpio1 3 GPIO_ACTIVE_LOW
			&gpio1 4 GPIO_ACTIVE_LOW
			&gpio1 5 GPIO_ACTIVE_LOW
			&gpio1 6 GPIO_ACTIVE_LOW>;
	};

	leds_system: leds_system {
		compatible = "gpio-leds";
		status = "ok";

		led@1 {
			label = "power-stat:g";
			gpios = <&gpio1 10 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};

		led@2 {
			label = "AUX_R1";
			gpios = <&ioexp_a 0 GPIO_ACTIVE_LOW>;
		};

		led@3 {
			label = "AUX_R2";
			gpios = <&ioexp_a 1 GPIO_ACTIVE_LOW>;
		};

		led@4 {
			label = "AUX_G1";
			gpios = <&ioexp_a 2 GPIO_ACTIVE_LOW>;
		};

		led@5 {
			label = "AUX_G2";
			gpios = <&ioexp_a 3 GPIO_ACTIVE_LOW>;
		};

		usb_drvvbus {
			label = "usb_drvvbus";
			gpios = <&gpio1 0 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};
};

&pcie1 {
	status = "okay";

	pci_root: root@0,0 {
		reg = <0x00000000 0 0 0 0>;
		#address-cells = <3>;
		#size-cells = <2>;

		bridge@1,0 {
			reg = <0x00010000 0 0 0 0>;
			#address-cells = <3>;
			#size-cells = <2>;

			bridge@2,1 {
				reg = <0x00020800 0 0 0 0>;
				#address-cells = <3>;
				#size-cells = <2>;

				eth1: eth1@3 {
					compatible = "intel,igb";
					reg = <0x00030000 0 0 0 0>;
					#address-cells = <3>;
					#size-cells = <2>;
					mac-address = [ 00 80 6d 01 23 45 ];
				};
			};

			bridge@2,2 {
				reg = <0x00021000 0 0 0 0>;
				#address-cells = <3>;
				#size-cells = <2>;

				eth2: eth2@4 {
					compatible = "intel,igb";
					reg = <0x00040000 0 0 0 0>;
					#address-cells = <3>;
					#size-cells = <2>;
					mac-address = [ 00 80 6d 01 23 46 ];
				};
			};
		};
	};
};

&duart0 {
	clocks = <&clockgen 4 3>;
	status = "okay";
};

&esdhc0 {
	clocks = <&clockgen 4 1>;
	broken-cd;
	status = "okay";
};

&esdhc1 {
	status = "disabled";
};

&i2c0 {
	status = "okay";

	rtc@32 {
		compatible = "dsk324sr";
		reg = <0x32>;
	};

	led@45 {
		compatible = "ti,tca6507";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x45>;

		/* LEDs on Main board */
		led0: power-status-red@0 {
			label = "power-stat:r";
			reg = <0x0>;
		};

		led1: system-status1-red@1 {
			label = "system-status1:r";
			linux,default-trigger = "heartbeat";
			reg = <0x1>;
		};

		led2: system-status2-red@2 {
			label = "system-status2:r";
			reg = <0x2>;
		};

		led3: system-status3-red@3 {
			label = "system-status3:r";
			reg = <0x3>;
		};

		led4: system-status1-green@4 {
			label = "system-status1:g";
			reg = <0x4>;
		};

		led5: system-status2-green@5 {
			label = "system-status2:g";
			reg = <0x5>;
		};

		led6: system-status3-green@6 {
			label = "system-status3:g";
			reg = <0x6>;
		};
	};

	eeprom@50 {
		compatible = "24c16";
		reg = <0x50>;
	};

	ioexp_a: gpio@74 {
		compatible = "ti,tca6416";
		reg = <0x74>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&dspi {
	bus-num = <0>;
	status = "okay";

	sc16is740: sc16is740@0 {
		compatible = "nxp,sc16is740";
		reg = <0>;
		spi-max-frequency = <4000000>;
		clocks = <&clk24m>;
		interrupt-parent = <&gpio1>;
		interrupts = <7 2>;
		clk24m: oscillator {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <24000000>;
		};

	};
};

&qspi {
	num-cs = <1>;
	bus-num = <0>;
	clocks = <&clockgen 4 1>, <&clockgen 4 1>;
	status = "okay";

	qflash0: n25q128a11@0 {
		compatible = "micron,n25q128a11";
		#address-cells = <1>;
		#size-cells = <1>;
		spi-max-frequency = <20000000>;
		m25p,fast-read;
		reg = <0>;
		spi-rx-bus-width = <2>;
		spi-tx-bus-width = <2>;

		/* MTD partition table */
		partition@0 {
			label = "u-boot";
			reg = <0x00000000 0x00200000>;
		};

		partition@1 {
			label = "u-boot-env";
			reg = <0x00200000 0x00080000>;
		};

		partition@2 {
			label = "reserved";
			reg = <0x00280000 0x00080000>;
		};

		partition@3 {
			label = "oops";
			reg = <0x00300000 0x00200000>;
		};

		barebox_env: partition@4 {
			label = "barebox.env";
			reg = <0x00500000 0x00080000>;
		};

		barebox_bin: partition@5 {
			label = "barebox.bin";
			reg = <0x00580000 0x00180000>;
		};

		hist_firmup: partition@6 {
			label = "hist_firmup";
			reg = <0x00700000 0x00080000>;
		};

		hist_boot: partition@7 {
			label = "hist_boot";
			reg = <0x00780000 0x00080000>;
		};
	};
};

&pfe {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
//	clocks = <&clockgen 4 0>;

	pfe_mac0: ethernet@0 {
		compatible = "fsl,pfe-gemac-port";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x0>;	/* GEM_ID */
		fsl,gemac-bus-id = <0x0>;	/* BUS_ID */
		fsl,mdio-mux-val = <0x0>;
		phy-mode = "sgmii";

		fixed-link {
			speed = <1000>;
			full-duplex;
		};
	};
};

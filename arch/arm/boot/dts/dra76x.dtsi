#include "dra74x-p.dtsi"

/ {
	compatible = "ti,dra762", "ti,dra7";

	ocp {
		cal: cal@489b0000 {
			compatible = "ti,dra76-cal";
			ti,hwmods = "cal";
			reg = <0x489B0000 0x400>,
			      <0x489B0800 0x40>,
			      <0x489B0900 0x40>;
				reg-names = "cal_top",
					    "cal_rx_core0",
					    "cal_rx_core1";
			interrupts = <GIC_SPI 353 IRQ_TYPE_LEVEL_HIGH>;
			syscon-camerrx = <&scm_conf 0x6DC>;
			#address-cells = <1>;
			#size-cells = <0>;
			status = "disabled";

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				csi2_0: port@0 {
					reg = <0>;
				};
				csi2_1: port@1 {
					reg = <1>;
				};
			};
		};
	};
};
